        mc:Ignorable="d"
        Title="MainWindow" Height="344" Width="662" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="34" Margin="82,65,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="390" x:Name="Vyhledat" FontSize="20" />
